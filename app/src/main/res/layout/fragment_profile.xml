<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ProfileFragment">



    <ImageButton
        android:id="@+id/editbuttonn"
        android:layout_width="20dp"
        android:layout_height="25dp"
        android:layout_marginStart="320dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="fitStart"
        android:src="@drawable/edit" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="-35dp"
        android:alpha="0.9"
        android:letterSpacing=".1"
        android:padding="5px"
        android:shadowColor="#870433"
        android:shadowDx="10"
        android:shadowDy="5"
        android:shadowRadius="5"
        android:text="PROFILE"
        android:textColor="#F9337A"
        android:textSize="40sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#90FF8BB4"
        app:cardCornerRadius="250dp"
        app:cardElevation="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="#FF8BB4"
            app:cardCornerRadius="290dp"
            app:cardElevation="10dp">

            <ImageButton
                android:id="@+id/uploadImageButton"
                android:layout_width="190dp"
                android:layout_height="210dp"
                android:layout_marginLeft="-6dp"
                android:layout_marginTop="-30dp"
                android:background="@null"
                android:paddingTop="20dp"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="-20dp"
        android:layout_marginTop="-30dp"
        android:src="@drawable/img" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/img1" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-250dp"
        android:text="First Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Firstname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="-2dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_round"
        android:enabled="false"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=" "
        android:textColor="#4D4B4A"
        android:textSize="20sp" />



    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Last Name"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Lastname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_round"
        android:layout_marginTop="-2dp"
        android:enabled="false"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=" "
        android:textColor="#4D4B4A"
        android:textSize="20sp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Address"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/img" />

    <EditText
        android:id="@+id/Address"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-175dp"
        android:background="@drawable/text_round"
        android:enabled="false"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=" "
        android:textColor="#4D4B4A"
        android:textSize="20sp" />

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Email"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_round"
        android:enabled="false"
        android:gravity="center_vertical"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text=" "
        android:layout_marginTop="-2dp"
        android:textColor="#4D4B4A"
        android:textSize="20sp" />

    <TextView
        android:layout_width="120dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:text="Phone Number"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Phone"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/text_round"
        android:enabled="false"
        android:gravity="center_vertical"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:layout_marginTop="-2dp"
        android:paddingEnd="10dp"
        android:text=" "
        android:textColor="#4D4B4A"
        android:textSize="20sp" />




    <Button
        android:id="@+id/buttonsave"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#e75480"
        android:letterSpacing="0.2"
        android:text="Save"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttoncancel"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="-45dp"
        android:backgroundTint="#AA2F33"
        android:letterSpacing="0.2"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:letterSpacing="0.2"
        android:layout_gravity="center_vertical"
        android:text="LOG OUT"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>

